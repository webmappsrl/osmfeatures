{
    "openapi": "3.0.0",
    "info": {
        "title": "OSM features API",
        "description": "Api documentation",
        "contact": {
            "email": "info@webmapp.it"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/features/pois/list": {
            "get": {
                "tags": ["API V1"],
                "summary": "List all POIs",
                "description": "Returns a list of POIs with their IDs and updated timestamps",
                "operationId": "listPois",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/PoiItem"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/features/pois/{id}": {
            "get": {
                "tags": ["API V1"],
                "summary": "Get POI by ID",
                "description": "Returns a single POI in GeoJSON format",
                "operationId": "getPoiById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "POI ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GeoJsonFeature"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "POI not found"
                    }
                }
            }
        },
        "/api/v1/features/admin-areas/list": {
            "get": {
                "tags": ["API V1"],
                "summary": "List all Admin Areas",
                "description": "Returns a list of Admin Areas with their details",
                "operationId": "listAdminAreas",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/AdminAreaItem"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/features/admin-areas/{id}": {
            "get": {
                "tags": ["API V1"],
                "summary": "Get Admin Area by ID",
                "description": "Returns a single Admin Area in GeoJSON format",
                "operationId": "getAdminAreaById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Admin Area ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AdminAreaGeojsonFeature"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Admin Area not found"
                    }
                }
            }
        },
        "/api/v1/features/poles/list": {
            "get": {
                "tags": ["API V1"],
                "summary": "List all Poles",
                "description": "Returns a list of Poles with their IDs and updated timestamps",
                "operationId": "listPoles",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/PoleItem"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/features/poles/{id}": {
            "get": {
                "tags": ["API V1"],
                "summary": "Get Pole by ID",
                "description": "Returns a single Pole in GeoJSON format",
                "operationId": "getPoleById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Pole ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PoleGeojsonFeature"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Pole not found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "PoiItem": {
                "properties": {
                    "osm_id": {
                        "type": "integer",
                        "example": 123
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2021-03-10T02:00:00Z"
                    }
                },
                "type": "object"
            },
            "GeoJsonFeature": {
                "properties": {
                    "type": {
                        "type": "string",
                        "example": "Feature"
                    },
                    "properties": {
                        "properties": {
                            "name": {
                                "type": "string",
                                "example": "Duomo di Arezzo"
                            },
                            "class": {
                                "type": "string",
                                "example": "amenity"
                            },
                            "subclass": {
                                "type": "string",
                                "example": "place_of_worship"
                            },
                            "osm_id": {
                                "type": "integer",
                                "example": 22720153
                            },
                            "osm_type": {
                                "type": "string",
                                "example": "W"
                            }
                        },
                        "type": "object"
                    },
                    "geometry": {
                        "properties": {
                            "type": {
                                "type": "string",
                                "example": "Point"
                            },
                            "coordinates": {
                                "type": "array",
                                "items": {
                                    "type": "number"
                                },
                                "example": [11.8805, 43.4635]
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "AdminAreaItem": {
                "properties": {
                    "osm_id": {
                        "type": "integer",
                        "example": 39150
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2021-03-10T02:00:00Z"
                    }
                },
                "type": "object"
            },
            "AdminAreaGeojsonFeature": {
                "properties": {
                    "type": {
                        "type": "string",
                        "example": "Feature"
                    },
                    "properties": {
                        "properties": {
                            "name": {
                                "type": "string",
                                "example": "Lampedusa e Linosa"
                            },
                            "updated_at": {
                                "type": "string",
                                "format": "date-time",
                                "example": "2021-03-10T02:00:00Z"
                            },
                            "admin_level": {
                                "type": "string",
                                "example": "8"
                            },
                            "osm_id": {
                                "type": "integer",
                                "example": 39150
                            },
                            "osm_type": {
                                "type": "string",
                                "example": "R"
                            },
                            "tags": {
                                "type": "json",
                                "example": "{\"name\": \"Lampedusa e Linosa\", \"type\": \"boundary\", \"name:ar\": \"لنبذوشة ونموشة\", \"name:es\": \"Lampedusa y Linosa\", \"name:it\": \"Lampedusa e Linosa\", \"name:la\": \"Lopadusa\", \"name:ru\": \"Лампедуза и Линоза\", \"boundary\": \"administrative\", \"wikidata\": \"Q224813\", \"ref:ISTAT\": \"084020\", \"wikipedia\": \"it:Lampedusa e Linosa\", \"admin_level\": \"8\", \"postal_code\": \"92031\", \"ref:catasto\": \"E431\"}"
                            }
                        },
                        "type": "object"
                    },
                    "geometry": {
                        "properties": {
                            "type": {
                                "type": "string",
                                "example": "Polygon"
                            },
                            "coordinates": {
                                "type": "array",
                                "items": {
                                    "type": "array",
                                    "items": {
                                        "type": "array",
                                        "items": {
                                            "type": "number"
                                        }
                                    }
                                },
                                "example": [
                                    [
                                        [11.8805, 43.4635],
                                        [11.8805, 43.4635],
                                        [11.8805, 43.4635],
                                        [11.8805, 43.4635]
                                    ]
                                ]
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "PoleItem": {
                "type": "object",
                "properties": {
                    "osm_id": {
                        "type": "integer",
                        "example": 123
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2021-03-10T02:00:00Z"
                    }
                }
            },
            "PoleGeojsonFeature": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "example": "Feature"
                    },
                    "properties": {
                        "properties": {
                            "name": {
                                "type": "string",
                                "example": "Sentiero Natura: \"M.te Capre - M.te Palestra - Rifugio M.te Palestra\""
                            },
                            "osm_id": {
                                "type": "integer",
                                "example": 7949696573
                            },
                            "osm_type": {
                                "type": "string",
                                "example": "N"
                            },
                            "updated_at": {
                                "type": "string",
                                "format": "date-time",
                                "example": "2021-03-10T02:00:00Z"
                            },
                            "tags": {
                                "type": "json",
                                "example": "{\"name\": \"Sentiero Natura: \\\"M.te Capre - M.te Palestra - Rifugio M.te Palestra\\\"\", \"tourism\": \"information\", \"information\": \"guidepost\"}"
                            },
                            "ref": {
                                "type": "string",
                                "example": "LWN 1"
                            },
                            "ele": {
                                "type": "string",
                                "example": "1000"
                            },
                            "destination": {
                                "type": "string",
                                "example": "Rifugio M.te Palestra"
                            },
                            "support": {
                                "type": "string",
                                "example": "pole"
                            }
                        },
                        "type": "object"
                    },
                    "geometry": {
                        "properties": {
                            "type": {
                                "type": "string",
                                "example": "Point"
                            },
                            "coordinates": {
                                "type": "array",
                                "items": {
                                    "type": "number"
                                },
                                "example": [11.8805, 43.4635]
                            }
                        },
                        "type": "object"
                    }
                }
            }
        }
    }
}
