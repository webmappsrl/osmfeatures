{
    "openapi": "3.0.0",
    "info": {
        "title": "OSM features API",
        "description": "Api documentation",
        "contact": {
            "email": "info@webmapp.it"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/features/pois/list": {
            "get": {
                "tags": ["API V1"],
                "summary": "List all POIs",
                "description": "Returns a list of POIs with their IDs and updated timestamps",
                "operationId": "listPois",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/PoiItem"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/features/pois/{id}": {
            "get": {
                "tags": ["API V1"],
                "summary": "Get POI by ID",
                "description": "Returns a single POI in GeoJSON format",
                "operationId": "getPoiById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "POI ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GeoJsonFeature"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "POI not found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "PoiItem": {
                "properties": {
                    "osm_id": {
                        "type": "integer",
                        "example": 123
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2021-03-10T02:00:00Z"
                    }
                },
                "type": "object"
            },
            "GeoJsonFeature": {
                "properties": {
                    "type": {
                        "type": "string",
                        "example": "Feature"
                    },
                    "properties": {
                        "properties": {
                            "name": {
                                "type": "string",
                                "example": "Duomo di Arezzo"
                            },
                            "class": {
                                "type": "string",
                                "example": "amenity"
                            },
                            "subclass": {
                                "type": "string",
                                "example": "place_of_worship"
                            },
                            "osm_id": {
                                "type": "integer",
                                "example": 22720153
                            },
                            "osm_type": {
                                "type": "string",
                                "example": "W"
                            }
                        },
                        "type": "object"
                    },
                    "geometry": {
                        "properties": {
                            "type": {
                                "type": "string",
                                "example": "Point"
                            },
                            "coordinates": {
                                "type": "array",
                                "items": {
                                    "type": "number"
                                },
                                "example": [11.8805, 43.4635]
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            }
        }
    }
}
